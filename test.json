{
  "version": 8,
  "name": "MapShot Albania",
  "sources": {
    "albania": {
      "type": "vector",
      "tiles": ["https://vectors.mapshot.io/tiles/{z}/{x}/{y}.pbf"],
      "minzoom": 0,
      "maxzoom": 14
    }
  },
  "layers": [
    {
      "id": "water",
      "type": "fill",
      "source": "albania",
      "source-layer": "water", 
