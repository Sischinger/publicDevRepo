{
  "version": 8,
  "name": "OSM Basic - Open Source",
  "metadata": {
    "mapshot:creator": "assistant",
    "attribution": "© OpenStreetMap contributors"
  },
  "center": [0, 0],
  "zoom": 2,
  "sources": {
    "osm_tiles": {
      "type": "vector",
      "tiles": ["https://vectors.mapshot.io/tiles/{z}/{x}/{y}.pbf"],
      "minzoom": 0,
      "maxzoom": 14,
      "attribution": "© OpenStreetMap contributors"
    }
  },
  "sprite": "sprites/sprite",
  "glyphs": "https://vectors.mapshot.io/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#eef2f3" }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "osm_tiles",
      "source-layer": "water",
      "paint": { "fill-color": "#a0c8f0" }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "osm_tiles",
      "source-layer": "landuse",
      "filter": ["in", "class", "park", "forest", "grass"],
      "paint": { "fill-color": "#e6f3de" }
    },
    {
      "id": "buildings",
      "type": "fill",
      "source": "osm_tiles",
      "source-layer": "building",
      "paint": { "fill-color": "#e9e6e1", "fill-outline-color": "#d0ccc7" }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "osm_tiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "primary"],
      "layout": { "line-cap": "round", "line-join": "round" },
      "paint": { "line-width": ["interpolate", ["linear"], ["zoom"], 5, 1.6, 14, 10], "line-color": "#f2d0a9" }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "osm_tiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "secondary"],
      "layout": { "line-cap": "round", "line-join": "round" },
      "paint": { "line-width": ["interpolate", ["linear"], ["zoom"], 5, 1, 14, 6], "line-color": "#f6e6c9" }
    },
    {
      "id": "road-tertiary",
      "type": "line",
      "source": "osm_tiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "tertiary"],
      "layout": { "line-cap": "round", "line-join": "round" },
      "paint": { "line-width": ["interpolate", ["linear"], ["zoom"], 12, 0.8, 16, 4], "line-color": "#ffffff" }
    },
    {
      "id": "rail",
      "type": "line",
      "source": "osm_tiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "rail"],
      "paint": { "line-color": "#bdbdbd", "line-dasharray": [2, 1], "line-width": 1 }
    },
    {
      "id": "poi-labels",
      "type": "symbol",
      "source": "osm_tiles",
      "source-layer": "poi",
      "layout": {
        "text-field": ["coalesce", ["get", "name"], ""],
        "text-font": ["Open Sans Regular", "Arial Unicode MS"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 10, 11, 16, 14]
      },
      "paint": { "text-color": "#4a4a4a", "text-halo-color": "#ffffff", "text-halo-width": 1 }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "osm_tiles",
      "source-layer": "place",
      "layout": {
        "text-field": ["coalesce", ["get", "name"], ""],
        "text-font": ["Open Sans Semibold", "Arial Unicode MS"],
        "text-size": ["step", ["zoom"], 12, 6, 14, 10, 18]
      },
      "paint": { "text-color": "#2b2b2b", "text-halo-color": "#ffffff", "text-halo-width": 1.2 }
    }
  ]
}
